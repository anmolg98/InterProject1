{
    "manifest_version": 2,
    "name":"Text Expander Tool123",
    "version": "1.0",
    "description" :"Easing out DA processes",
    "browser_action":{
        "default_icon" : "f046-512.png"
    },
    "background" : {
        "scripts" : ["shortcut_script.js","background-install.js"] ,
        "persistant" : false
    },
    "permissions" : [
        "storage",
        "tabs",
        "<all_urls>"
        
    ],

     "content_scripts": [
         {
             "matches" : [ "<all_urls>" ] ,
             "js" :[
                "jquery.js",
                "shortcut_content.js",
                "textToshortcutobj.js"
            
            ],
                "run_at": "document_start"
         }
     ],
     "browser_action" : {
         "default_popup" : "popup.html"
     },
     "web_accessible_resources": [
        "textfile.txt",
        "text.html"
    ]
}